<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.coursehubapplication">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CourseHubApplication"
        tools:targetApi="31">
        <activity
            android:name=".HomeScreen.MyLessonActivity"
            android:exported="false" />
        <activity
            android:name=".HomeScreen.EditeProfileActivity"
            android:exported="false" />
        <activity
            android:name=".HomeScreen.CourseDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".DashboardScreen.ViewCoursesActivity"
            android:exported="false" />
        <activity
            android:name=".DashboardScreen.AddCategeryActivity"
            android:exported="false" />
        <activity
            android:name=".DashboardScreen.ViewLessonActivity"
            android:exported="false" />
        <activity
            android:name=".DashboardScreen.AddLessonActivity"
            android:exported="false" />
        <activity
            android:name=".DashboardScreen.AddCourseActivity"
            android:exported="false" />
        <activity
            android:name=".DashboardScreen.DashboardActivity"
            android:exported="true" />
        <activity
            android:name=".HomeScreen.HomeActivity"
            android:exported="true" />
        <activity
            android:name=".OnbordingScreen.OnboardingActivity"
            android:exported="true" />
        <activity
            android:name=".LoginScreen.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".LoginScreen.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".LoginScreen.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>