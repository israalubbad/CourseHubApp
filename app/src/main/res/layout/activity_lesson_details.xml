<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".HomeScreen.LessonDetailsActivity">
    <TextView
        android:id="@+id/lessonTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lesson Title"
        android:textSize="24sp"
        android:textColor="#E2333232"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/arb_"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description :"
      android:textSize="20sp"
        android:fontFamily="@font/arb"
        android:layout_marginTop="16dp"
     android:textColor="#555555"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/lessonTitleTv"
        android:lineSpacingExtra="4dp"
     android:layout_marginBottom="24dp"/>

    <TextView
    android:id="@+id/descriptionLessonTV"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:text=" "
    android:textSize="20sp"
    android:layout_marginTop="16dp"
    android:textColor="#555555"
        android:fontFamily="@font/arb"
    android:layout_marginHorizontal="16dp"
    app:layout_constraintTop_toBottomOf="@id/description"
    android:lineSpacingExtra="4dp"
    android:layout_marginBottom="24dp"/>


    <TextView
        android:id="@+id/youtubeLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/descriptionLessonTV"
        app:layout_constraintStart_toStartOf="@id/description"
        app:layout_constraintEnd_toStartOf="@id/articelLink"
        android:text="Youtube link"
        android:textColor="#4E4B4B"
        android:textSize="20dp"
        android:maxLines="10"
        android:fontFamily="@font/arb"
        android:layout_marginTop="20dp"
        android:enabled="true"
        android:drawableStart="@drawable/youtube"
        android:drawablePadding="8sp"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:id="@+id/articelLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/youtubeLink"
        app:layout_constraintStart_toEndOf="@id/youtubeLink"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Articel Link"
        android:textColor="#4E4B4B"
        android:fontFamily="@font/arb"
        android:textSize="20dp"
        android:visibility="visible"
        android:drawableStart="@drawable/article"
        android:drawablePadding="8sp"
        android:layout_marginBottom="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>